<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".LogInActivity_C">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="206dp"
        android:layout_height="234dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="372dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/imagen1" />

    <EditText
        android:id="@+id/txt_user_name_login"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="354dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:hint="Numero de Asociado"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txt_password_login"
        android:layout_width="364dp"
        android:layout_height="65dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="376dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="163dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_iniciarsesion_login"
        android:layout_width="237dp"
        android:layout_height="63dp"

        android:layout_marginBottom="252dp"
        android:layout_marginEnd="86dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="291dp"
        android:background="@drawable/button"
        android:text="Iniciar Sesion"

        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_registrarme_login"
        android:layout_width="237dp"
        android:layout_height="63dp"
        android:onClick="registro"
        android:layout_marginBottom="149dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="391dp"
        android:background="@drawable/button_2"
        android:text="Registrarme"
        android:textSize="15dp" />

</RelativeLayout>